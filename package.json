{
  "name": "dust",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:build:dev": "podman build -f postgres-local/Dockerfile -t dustdb",
    "db:setup:dev": "podman run -d -p 5432:5432 --name dustdb -e POSTGRES_PASSWORD=postgres dustdb",
    "db:start:dev": "podman start dustdb",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:gen": "prisma generate",
    "db:loadquotes": "node scripts/load_quotes.mjs",
    "job:export": "bun --conditions react-server jobs/export.ts",
    "test": "jest"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.30.0",
    "@auth/prisma-adapter": "^2.7.4",
    "@prisma/client": "^5.3.1",
    "@react-spectrum/toast": "^3.0.0-beta.4",
    "@spectrum-icons/illustrations": "^3.6.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash.shuffle": "^4.2.7",
    "@types/luxon": "^3.3.2",
    "@types/node": "20.6.1",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/uuid": "^9.0.4",
    "autoprefixer": "10.4.15",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "immer": "^10.0.2",
    "lodash.shuffle": "^4.2.0",
    "luxon": "^3.4.3",
    "next": "^15.1.3",
    "next-auth": "^4.24.7",
    "postcss": "^8.4.49",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "server-only": "^0.0.1",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "use-immer": "^0.9.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "^5.3.1",
    "yaml": "^2.3.2"
  },
  "dockerfile": {
    "envs": {
      "base": {
        "NEXT_TELEMETRY_DISABLED": "1"
      },
      "deploy": {
        "NEXTAUTH_URL": "https://dust.luketurner.org"
      }
    },
    "packages": {
      "deploy": [
        "openssh-client",
        "git",
        "curl",
        "ca-certificates"
      ]
    }
  }
}
